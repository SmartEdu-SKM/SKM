<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.dell.smartedu" >

    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name" >
        </activity>
        <activity android:name=".Tasks" />
        <activity android:name=".NewTask" />
        <activity
            android:name=".SplashScreen"
            android:label="@string/title_activity_splash_screen" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".login"
            android:label="@string/title_activity_login" >
        </activity>
        <activity
            android:name=".SignUp"
            android:label="@string/title_activity_sign_up" >
        </activity>
        <activity
            android:name=".Students"
            android:label="@string/title_activity_students" >
        </activity>
        <activity
            android:name=".NewStudent"
            android:label="@string/title_activity_new_student" >
        </activity>
        <activity
            android:name=".StudentInfo"
            android:label="@string/title_activity_student_info" >
        </activity>
        <activity
            android:name=".Role"
            android:label="@string/title_activity_role" >
        </activity>
        <activity
            android:name=".AddRole"
            android:label="@string/title_activity_add_role"
            android:parentActivityName=".Role" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.dell.smartedu.Role" />
        </activity>
        <activity
            android:name=".ChooseRole"
            android:label="@string/title_activity_choose_role"
            android:parentActivityName=".Role" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.dell.smartedu.Role" />
        </activity>
        <activity
            android:name=".student_home_activity"
            android:label="@string/title_activity_student_home_activity" >
        </activity>
        <activity
            android:name=".parent_home_activity"
            android:label="@string/title_activity_parent_home_activity" >
        </activity>
        <activity
            android:name=".BaseActivity"
            android:label="@string/title_activity_base" >
        </activity>
        <activity
            android:name=".NewEvent_Teacher"
            android:label="@string/title_activity_new_event__teacher" >
        </activity>
        <activity
            android:name=".teacher_classes"
            android:label="@string/title_activity_teacher_classes" >
        </activity>
        <activity
            android:name=".TimeTable"
            android:label="@string/title_activity_time_table" >
        </activity>
        <activity
            android:name=".Schedule"
            android:label="@string/title_activity_schedule" >
        </activity>
    </application>

</manifest>
