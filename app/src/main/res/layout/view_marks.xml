<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.dell.smartedu.NewEvent_Teacher"
    android:orientation="horizontal">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Exam"
        android:id="@+id/absentDays_head"
        android:textSize="25sp"
        android:layout_marginTop="50dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Total Marks"
        android:id="@+id/totalDays_head"
        android:textSize="25sp"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/absentDays_head"
        android:layout_toStartOf="@+id/absentDays_head" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/exam"
        android:text="exam"
        android:textSize="20sp"
        android:layout_below="@+id/absentDays_head"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/totalMarks"
        android:text="total marks"
        android:textSize="25sp"
        android:layout_alignBottom="@+id/totalDays_head"
        android:layout_toRightOf="@+id/absentDays_head"
        android:layout_toEndOf="@+id/absentDays_head" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/obtained"
        android:text="obtained"
        android:textSize="25sp"
        android:layout_marginTop="91dp"
        android:layout_below="@+id/totalMarks"
        android:layout_alignRight="@+id/totalMarks"
        android:layout_alignEnd="@+id/totalMarks" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Marks Obtained"
        android:id="@+id/textView21"
        android:textSize="25sp"
        android:layout_alignBaseline="@+id/obtained"
        android:layout_alignBottom="@+id/obtained"
        android:layout_toLeftOf="@+id/exam"
        android:layout_toStartOf="@+id/exam" />


</RelativeLayout>

