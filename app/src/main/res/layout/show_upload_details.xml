<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:fillViewport="true">

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="wrap_content" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.dell.smartedu.NewEvent_Teacher"
    android:orientation="horizontal"
    android:background="#006064">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Type"
        android:id="@+id/typeHead"
        android:textSize="25sp"
        android:layout_marginTop="57dp"
        android:layout_below="@+id/date"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textColor="#ffffff" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/date"
        android:layout_marginTop="45dp"
        android:textSize="18sp"
        android:layout_marginLeft="10dp"
        android:text="(due)"

        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/test"
        android:layout_toEndOf="@+id/test"
        android:textColor="#ffff" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/test"
        android:background="@drawable/ic_calender"

        android:backgroundTint="#fff"
        android:nestedScrollingEnabled="false"
        android:layout_alignBottom="@+id/date"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Subject"
        android:id="@+id/textView19"
        android:textSize="25sp"
        android:layout_above="@+id/subject"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textColor="#ffffff" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/subject"
        android:text="Subject"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textColor="#ffffff" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Due Date"
        android:id="@+id/dueDate"
        android:textColor="#ffff"
        android:textSize="20sp"
        android:layout_above="@+id/typeHead"
        android:layout_toRightOf="@+id/dateText2"
        android:layout_toEndOf="@+id/dateText2" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageButton"
        android:background="@drawable/ic_calender"
        android:backgroundTint="#fff"
        android:nestedScrollingEnabled="false"
        android:layout_below="@+id/date"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/dateText2"
        android:textSize="18sp"
        android:text="(put on)"
        android:textColor="#ffff"
        android:layout_alignBottom="@+id/imageButton"
        android:layout_alignLeft="@+id/date"
        android:layout_alignStart="@+id/date" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Date"
        android:id="@+id/uploadDate"
        android:textColor="#ffff"
        android:textSize="20sp"
        android:layout_alignTop="@+id/dateText2"
        android:layout_alignLeft="@+id/dueDate"
        android:layout_alignStart="@+id/dueDate" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/typeDesc"
        android:text="type"
        android:textSize="15sp"
        android:layout_below="@+id/typeHead"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textColor="#ffffff" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageUpload"
        android:layout_marginTop="40dp"
        android:layout_below="@+id/subject"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="OK"
        android:id="@+id/doneButton"
        android:textColor="#ffff"
        android:background="#070707"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Delete"
        android:id="@+id/delButton"
        android:background="#090909"
        android:textColor="#ffff"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Topic/Details"
        android:singleLine="true"
        android:ellipsize="marquee"
        android:lines="1"
        android:scrollHorizontally="true"
        android:id="@+id/textView20"
        android:layout_alignTop="@+id/typeHead"
        android:layout_alignRight="@+id/doneButton"
        android:layout_alignEnd="@+id/doneButton"
        android:textSize="25sp"
        android:textColor="#ffffff" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/topic"
        android:text="topic/details"
        android:textSize="15sp"
        android:layout_below="@+id/textView20"
        android:layout_alignLeft="@+id/doneButton"
        android:layout_alignStart="@+id/doneButton"
        android:textColor="#ffffff" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="View All"
        android:id="@+id/viewAll"
        android:textSize="11sp"
        android:textColor="#ffff"
        android:background="#040404"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />


</RelativeLayout>

</ScrollView>