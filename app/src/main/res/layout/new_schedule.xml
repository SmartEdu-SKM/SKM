<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/info"
        android:layout_below="@+id/textView14"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add"
        android:id="@+id/add"
        android:layout_below="@+id/info"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:background="#20BF9F"
        android:allowUndo="false"
        android:textColor="#ffffff" />

    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/start_hours"
        android:layout_below="@+id/textView11"
        android:layout_toRightOf="@+id/textView13"
        android:layout_toEndOf="@+id/textView13"
        android:popupBackground="#20BF9F" />

    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/start_mins"
        android:layout_below="@+id/start_hours"
        android:layout_alignLeft="@+id/start_hours"
        android:layout_alignStart="@+id/start_hours"
        android:popupBackground="#20BF9F" />

    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/end_hours"
        android:layout_below="@+id/textView13"
        android:layout_alignLeft="@+id/start_mins"
        android:layout_alignStart="@+id/start_mins"
        android:popupBackground="#20BF9F" />

    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/end_mins"
        android:layout_below="@+id/end_hours"
        android:layout_alignLeft="@+id/end_hours"
        android:layout_alignStart="@+id/end_hours"
        android:popupBackground="#20BF9F" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Start Time"
        android:id="@+id/textView11"
        android:layout_marginTop="78dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textColor="#010001" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="End Time"
        android:id="@+id/textView13"
        android:layout_below="@+id/start_mins"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textColor="#010001" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Info"
        android:id="@+id/textView14"
        android:layout_below="@+id/end_mins"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textColor="#010001" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="hours :"
        android:id="@+id/textView15"
        android:layout_alignTop="@+id/start_hours"
        android:layout_toLeftOf="@+id/start_hours"
        android:layout_toStartOf="@+id/start_hours" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="mins:"
        android:id="@+id/textView16"
        android:layout_below="@+id/start_hours"
        android:layout_alignRight="@+id/textView11"
        android:layout_alignEnd="@+id/textView11" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="hours:"
        android:id="@+id/textView17"
        android:layout_below="@+id/textView13"
        android:layout_alignRight="@+id/textView16"
        android:layout_alignEnd="@+id/textView16" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="mins:"
        android:id="@+id/textView18"
        android:layout_below="@+id/end_hours"
        android:layout_alignRight="@+id/textView17"
        android:layout_alignEnd="@+id/textView17" />

</RelativeLayout>